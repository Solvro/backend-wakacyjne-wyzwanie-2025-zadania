generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExpenseCategory{
  food
  transport
  accommodation
}

enum TripStatus{
  planned
  in_progress
  terminated 
}


model Expense{
  id  Int @id @default(autoincrement())
  amount  Float
  category  ExpenseCategory?
  note  String?
  trip Trip  @relation(fields: [tripId], references: [id])
  tripId  Int


}

model Trip{
  id  Int @id @default(autoincrement())
  start_date DateTime
  price_per_person Float
  people_count  Int
  status TripStatus
  expenses  Expense[]
  participants  Participant[]
}

model Participant{
  id  Int @id @default(autoincrement())
  name String
  email String @unique
  role  String
  trip Trip   @relation(fields: [tripId], references: [id])
  tripId  Int

}

